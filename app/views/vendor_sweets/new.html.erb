<h1>Add a sweet to a vendor</h1>

<% if flash[:errors]%>
  <h2>Error!</h2>
  <% flash[:errors].each do |e| %>
    <p><%= e %> </p>
  <% end %>
<% end %>

<%= form_for @vs do |form_builder| %>

  Vendor: <%= form_builder.collection_select :vendor_id, Vendor.all, :id, :name%>
  <br>
  Sweet: <%= form_builder.collection_select :sweet_id, Sweet.all, :id, :name%>
  <br>
  Price: <%= form_builder.number_field :price %>
  <br>
  <%= form_builder.submit%>
<% end %>