<h1>Create Joiner Instance</h1>

<% if flash[:messages]%>
    <% flash[:messages].each do |message|%>
        <h4><%= message%></h4>
    <% end %>
<% end %>

<%= form_for @vendor_sweet do |vs|%>
    <%= vs.label Vendor%>
    <%= vs.collection_select :vendor_id, Vendor.all, :id, :name%>

    <%= vs.label Sweet%>
    <%= vs.collection_select :sweet_id, Sweet.all, :id, :name%>

    <%= vs.label :price%>
    <%= vs.number_field :price%>

    <%= vs.submit%>
<% end %> 