<h1>Create a VendorSweet</h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @vendor_sweet do |f| %>

  <%= f.label "Vendor:" %>
  <%= f.collection_select :vendor_id, @vendors, :id, :name %><br>

  <%= f.label "Sweet:" %>
  <%= f.collection_select :sweet_id, @sweets, :id, :name %><br>

  <%= f.label "Price:" %>
  <%= f.number_field :price %><br>
 
  <%= f.submit %>
  
<% end %>