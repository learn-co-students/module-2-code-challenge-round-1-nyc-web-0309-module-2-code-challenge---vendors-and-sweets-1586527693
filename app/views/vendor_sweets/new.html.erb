<h1>New VendorSweet Relationship</h1>

<% if flash[:errors]%>
<ul>
    <% flash[:errors].each do |error|%>
    <li><%= error %></li>
    <% end%>
    </ul>
<% end %>

<%= form_for @vendor_sweet do |f| %>

<%= f.label :vendor_id %>
<%= f.collection_select :vendor_id, @vendors, :id, :name %>

<%= f.label :sweet_id %>
<%= f.collection_select :sweet_id, @sweets, :id, :name %>

<%= f.label :price %>
<%= f.number_field :price %>

<%= f.submit  %>
<% end %>