<h1> Add a new Vendor - Sweet Combo! </h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <%= e %><br>
    <% end %>
<% end %>

<%= form_for @vendor_sweet do |vs| %>

<%= vs.label :vendor_id %>
<%= vs.collection_select :vendor_id, Vendor.all, :id, :name %><br>

<%= vs.label :sweet_id %>
<%= vs.collection_select :sweet_id, Sweet.all, :id, :name %><br>

<%= vs.label :price %>
<%= vs.number_field :price %>(in cents) <br>

<%= vs.submit %>
<% end %>