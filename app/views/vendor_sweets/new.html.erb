<h1>Create a VendorSweet </h1>

<% if flash[:errors] %>
<ul>
    <% flash[:errors].each do |error| %>
       <p> <%= error %> </p>
    <% end %>
</ul>
<% end %>


<%= form_for @vendor_sweet do |f| %>

    <%= f.label "Vendor:" %>
    <%= f.collection_select :vendor_id, @vendors, :id, :name, {prompt: "Select a Vendor"}%>

    <%= f.label "Sweet:" %>
    <%= f.collection_select :sweet_id, @sweets, :id, :name, {prompt: "Select a Sweet"}%>

    <%= f.label "Price:" %>
    <%= f.number_field :price %>

    <%= f.submit %>
<% end %><br>

<%= button_to "Go to Sweets Index Page", sweets_path, method: :get %><br>
<%= button_to "Go to Vendors Index Page", vendors_path, method: :get %>

