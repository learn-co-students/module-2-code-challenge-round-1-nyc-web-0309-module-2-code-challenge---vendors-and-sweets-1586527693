<h1> Create new VendorSweet </h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <%= error %> <br>
    <% end %>
    <% end %>

<%= form_for @vendor_sweet do |f| %>
<%= f.label "Choose a Vendor:" %>
<%= f.collection_select :vendor_id, @vendors, :id, :name %><br> <br>

<%= f.label "Choose a Sweet:" %>
<%= f.collection_select :sweet_id, @sweets, :id, :name %><br><br>

<%= f.label "Price:" %>
<%= f.number_field :price %><br><br>

<%= f.submit "Create your VendorSweet!" %>
<% end %>

<br><br>
<%= button_to "Sweets Index", sweets_path, method: :get %>
<%= button_to "Vendors Index", vendors_path, method: :get %>
